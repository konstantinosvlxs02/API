@{
    ViewData["Title"] = "Αρχική";
}

<div class="row">
    <div class="col-12 text-center mb-4">
        <h2>Καλώς ήρθες, @User.Identity?.Name!</h2>
        <p class="text-muted">Διαχείριση posts, μηνυμάτων, επαφών και ειδοποιήσεων.</p>
    </div>
</div>

<div class="row g-4">
    <div class="col-md-3">
        <div class="card text-center p-4">
            <div class="card-body">
                <i class="bi bi-file-earmark-post display-4 text-primary"></i>
                <h5 class="mt-3">Posts</h5>
                <p class="text-muted">Δημιουργία, αναζήτηση και κατηγοριοποίηση posts</p>
                <a asp-controller="Post" asp-action="Index" class="btn btn-primary">
                    <i class="bi bi-arrow-right"></i> Μετάβαση
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center p-4">
            <div class="card-body">
                <i class="bi bi-people display-4 text-success"></i>
                <h5 class="mt-3">Επαφές</h5>
                <p class="text-muted">Προσθήκη προσωπικών επαφών</p>
                <a asp-controller="Contact" asp-action="Index" class="btn btn-success">
                    <i class="bi bi-arrow-right"></i> Μετάβαση
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center p-4">
            <div class="card-body">
                <i class="bi bi-chat-dots display-4 text-info"></i>
                <h5 class="mt-3">Μηνύματα</h5>
                <p class="text-muted">Αποστολή προσωπικών μηνυμάτων</p>
                <a asp-controller="Message" asp-action="Index" class="btn btn-info text-white">
                    <i class="bi bi-arrow-right"></i> Μετάβαση
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center p-4">
            <div class="card-body">
                <i class="bi bi-bell display-4 text-warning"></i>
                <h5 class="mt-3">Ειδοποιήσεις</h5>
                <p class="text-muted">Άμεση ενημέρωση σε πραγματικό χρόνο</p>
                <a asp-controller="Notification" asp-action="Index" class="btn btn-warning">
                    <i class="bi bi-arrow-right"></i> Μετάβαση
                </a>
            </div>
        </div>
    </div>
</div>
