@model List<Contact>
@{
    ViewData["Title"] = "Επαφές";
    var allUsers = ViewBag.AllUsers as List<User> ?? new List<User>();
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3><i class="bi bi-people"></i> Οι Επαφές μου</h3>
    <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addContactModal">
        <i class="bi bi-person-plus"></i> Προσθήκη Επαφής
    </button>
</div>

@if (Model.Count == 0)
{
    <div class="text-center text-muted py-5">
        <i class="bi bi-person-x display-1"></i>
        <p class="mt-3">Δεν έχετε προσθέσει επαφές ακόμα.</p>
    </div>
}
else
{
    <div class="row g-3">
        @foreach (var contact in Model)
        {
            <div class="col-md-4 col-lg-3">
                <div class="card contact-card text-center p-3">
                    <div class="card-body">
                        <i class="bi bi-person-circle display-4 text-primary"></i>
                        <h6 class="mt-2">@contact.Name</h6>
                        <small class="text-muted">@contact.ContactUser?.Username</small>
                        <div class="mt-2">
                            <a asp-controller="Message" asp-action="Conversation" asp-route-userId="@contact.ContactUserId"
                               class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-chat"></i> Μήνυμα
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

<!-- Add Contact Modal -->
<div class="modal fade" id="addContactModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-action="Create">
                <div class="modal-header">
                    <h5 class="modal-title">Προσθήκη Επαφής</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Χρήστης</label>
                        <select name="contactUserId" class="form-select" required>
                            <option value="">Επιλέξτε χρήστη...</option>
                            @foreach (var user in allUsers)
                            {
                                <option value="@user.Id">@user.Username (@user.Email)</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Όνομα Επαφής (προαιρετικό)</label>
                        <input type="text" name="contactName" class="form-control" placeholder="Πχ: Γιάννης" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-person-plus"></i> Προσθήκη
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
