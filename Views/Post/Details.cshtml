@model Post
@{
    ViewData["Title"] = Model.Title;
    var postCategories = ViewBag.PostCategories as List<Category> ?? new List<Category>();
    var allCategories = ViewBag.AllCategories as List<Category> ?? new List<Category>();
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <a asp-action="Index" class="btn btn-outline-secondary mb-3">
            <i class="bi bi-arrow-left"></i> Πίσω
        </a>

        <div class="card">
            <div class="card-body">
                <h3 class="card-title">@Model.Title</h3>
                <div class="d-flex gap-2 mb-3">
                    <span class="text-muted">
                        <i class="bi bi-person"></i> @Model.User?.Username
                    </span>
                    <span class="text-muted">
                        <i class="bi bi-clock"></i> @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                    </span>
                </div>

                @if (postCategories.Any())
                {
                    <div class="mb-3">
                        @foreach (var cat in postCategories)
                        {
                            <span class="badge bg-secondary me-1">@cat.Name</span>
                        }
                    </div>
                }

                <hr />
                <p class="card-text" style="white-space: pre-wrap;">@Model.Content</p>
            </div>
        </div>

        <!-- Add Category to Post -->
        <div class="card mt-3">
            <div class="card-body">
                <h6><i class="bi bi-tags"></i> Προσθήκη Κατηγορίας</h6>
                <div class="d-flex gap-2">
                    <form method="post" asp-action="AddCategory" class="d-flex gap-2 flex-grow-1">
                        <input type="hidden" name="postId" value="@Model.Id" />
                        <select name="categoryId" class="form-select" required>
                            <option value="">Επιλέξτε κατηγορία...</option>
                            @foreach (var cat in allCategories)
                            {
                                <option value="@cat.Id">@cat.Name</option>
                            }
                        </select>
                        <button type="submit" class="btn btn-sm btn-primary">Προσθήκη</button>
                    </form>
                </div>
                <hr />
                <form method="post" asp-action="CreateCategory" class="d-flex gap-2">
                    <input type="hidden" name="returnToPostId" value="@Model.Id" />
                    <input type="text" name="name" class="form-control form-control-sm" placeholder="Νέα κατηγορία..." required />
                    <button type="submit" class="btn btn-sm btn-outline-success">
                        <i class="bi bi-plus"></i>
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
