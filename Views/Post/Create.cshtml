@{
    ViewData["Title"] = "Νέο Post";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title mb-4">
                    <i class="bi bi-plus-circle"></i> Δημιουργία Νέου Post
                </h4>

                <form method="post" asp-action="Create">
                    <div class="mb-3">
                        <label class="form-label">Τίτλος</label>
                        <input type="text" name="title" class="form-control" placeholder="Εισάγετε τίτλο" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Περιεχόμενο</label>
                        <textarea name="content" class="form-control" rows="8" placeholder="Γράψτε το περιεχόμενο..." required></textarea>
                    </div>
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle"></i> Δημοσίευση
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">Ακύρωση</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
